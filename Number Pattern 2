#include<iostream>
using namespace std;


int main(){
    int n,j;
	cin>>n;
    int i = 1;
    int val=1;
    while(i<=n){
        int j =1;
        val=i;
        int k=1;
        while(k<=n-i)
        {
            cout<<" ";
            k++;
        }
        while(j<=i)
        {
            cout<<val;
            val++;
            j++;
        }
        cout<<endl;
        i++;
    }
}


