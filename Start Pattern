#include<iostream>
using namespace std;


int main(){
	int n,i,j;
    cin>>n;
    i=1;
    while(i<=n)
    {
        int k=1;
        while(k<=n-i)
        {
            cout<<" ";
            k++;
        }
        int pr=(i*2)-1;
        int j =1;
        while(j<=pr)
        {
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
    
    return 0;
  
}


